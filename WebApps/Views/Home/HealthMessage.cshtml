@model double
@using ConsoleAppProject.App02
@{
    ViewData["Title"] = "HealthMessage";
}

@{ 
    BMICalculator Bmi = new BMICalculator();
    Bmi.Index = Model;
}

<header class="jumbotron">
    <h1>Health Message</h1>
    <h2>By Alex Clements</h2>
</header>
<section>
    <h2>Your BMI Index</h2>
    <p class="text-lead">
        @Bmi.OutputWho()
    </p>
    <h2>BAME Message</h2>
    <p class="text-info">
        @Bmi.OutputWarning()
    </p>
</section>